<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/round_corner_progress_background"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#AAAAAA"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/round_corner_progress_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#777777"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/round_corner_progress_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/round_corner_progress_icon" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/round_corner_progress_progress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#555555"
        android:orientation="horizontal" />

</LinearLayout>
